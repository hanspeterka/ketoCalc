{% extends "base.html.j2" %}
{% block title %}
    Denní přehled
{% endblock %}

{% block script %}
    {% include 'javascript/stimulus.js.html' %}
    {% include 'javascript/daily_plan.js.html' %}
{% endblock %}

{% block content %}
    <div class="container" data-controller="daily">
        <div class="text-center">
            <span class="float-left" style="margin-left: 10rem">
                <a href="{{ url_for('DailyPlansView:show', date=dates['previous']) }}">
                {{ human_format_date(dates["previous"]) }}
                </a>
            </span>
            <span style="font-size: 2rem">
                {{ human_format_date(dates["active"]) }}
            </span>
            <span class="float-right" style="margin-right: 10rem">
                <a href="{{ url_for('DailyPlansView:show', date=dates['next']) }}">
                {{ human_format_date(dates["next"]) }}
                </a>
            </span>
        </div>

        <div class="row">
            <table class="table table-striped " data-target="daily-plan.recipeTable">
                <thead>
                    <tr>
                        <th>{{ texts.title }}</th>
                        <th>{{ texts.energy_simple }}</th>
                        <th>{{ texts.protein_simple }}</th>
                        <th>{{ texts.fat_simple }}</th>
                        <th>{{ texts.sugar_simple }}</th>
                        <th>{{ texts.amount_simple }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr>
                        <td><a href="{{ url_for('RecipesView:show', id=recipe.id) }}">{{ recipe.name }}</a></td>
                        <td>{{ recipe.values.calorie | round(2) }}</td>
                        <td>{{ recipe.values.protein | round(2) }}</td>
                        <td>{{ recipe.values.fat | round(2) }}</td>
                        <td>{{ recipe.values.sugar | round(2) }}</td>
                        <td>{{ recipe.amount }}</td>
                        <td></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tr>
                    <th></th>
                    <th>{{ texts.energy_simple }}</th>
                    <th>{{ texts.protein_simple }}</th>
                    <th>{{ texts.fat_simple }}</th>
                    <th>{{ texts.sugar_simple }}</th> 
                    <th>{{ texts.amount_simple }}</th>
                    <th data-toggle="tooltip" title="tuky: bílkoviny + cukry">{{ texts.ratio }}</th>
                </tr>
                <tr data-target="daily-plan.totals">
                    <th>Celkem:</th>
                    <td>{{ daily_plan.totals.calorie | round(2) }}</td>
                    <td>{{ daily_plan.totals.protein | round(2) }}</td>
                    <td>{{ daily_plan.totals.fat | round(2) }}</td>
                    <td>{{ daily_plan.totals.sugar | round(2) }}</td>
                    <td>{{ daily_plan.totals.amount }}</td>
                    <td>{{ daily_plan.totals.ratio }} : 1</td>
                </tr>
            </table>

        </div>
        <div data-controller="daily-plan" class="row" style="float:right; margin-top:5rem; margin-right: 8rem;">
            <form class="form form-inline" action="{{ url_for('DailyPlansView:add_recipe_AJAX') }}" method="post">
                <select class="form-control" data-target="daily-plan.diets">
                {% for diet in diets: %}
                    <option data-action="change->daily-plan#load_recipes" value="{{ diet.id }}">{{ diet.name }}</option>
                {% endfor %}
                </select>
            
                <select name="recipe_id" class="form-control" data-target="daily-plan.recipes"></select>
                <input type="number" step="0.01" name="amount" class="form-control" required>
                <input type="hidden" name="date" value="{{ dates['active'] }}">
                <input type="submit" class="form-control btn btn-primary"  name="Přidat recept">
            </form>
        </div>

    </div>
{% endblock %}
