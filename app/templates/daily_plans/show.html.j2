{% extends "base.html.j2" %}
{% block title %}
    Denní přehled
{% endblock %}

{% block script %}
    {% include 'javascript/stimulus.js.html' %}
    {% include 'javascript/daily_plan.js.html' %}
{% endblock %}

{% block content %}
    <div class="container" data-controller="daily-plan">
        <div class="text-center">
            <span class="float-left" style="margin-left: 10rem">
                <a href="{{ url_for('DailyPlansView:show', date=dates['previous']) }}">
                {{ human_format_date(dates["previous"]) }}
                </a>
            </span>
            <span style="font-size: 2rem">
                {{ human_format_date(dates["active"]) }}
            </span>
            <span class="float-right" style="margin-right: 10rem">
                <a href="{{ url_for('DailyPlansView:show', date=dates['next']) }}">
                {{ human_format_date(dates["next"]) }}
                </a>
            </span>
        </div>

        <div class="row">
            <table class="table table-striped " data-target="daily-plan.recipesTable">
                <thead>
                    <tr>
                        <th>{{ texts.title }}</th>
                        <th>{{ texts.energy_simple }}</th>
                        <th>{{ texts.protein_simple }}</th>
                        <th>{{ texts.fat_simple }}</th>
                        <th>{{ texts.sugar_simple }}</th>
                        <th>{{ texts.amount_simple }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for daily_recipe in daily_recipes %}
                    <tr data-id="{{ daily_recipe.id }}">
                        <td><a href="{{ url_for('RecipesView:show', id=daily_recipe.recipe.id) }}">{{ daily_recipe.recipe.name }}</a></td>
                        <td>{{ daily_recipe.values.calorie | round(2) }}</td>
                        <td>{{ daily_recipe.values.protein | round(2) }}</td>
                        <td>{{ daily_recipe.values.fat | round(2) }}</td>
                        <td>{{ daily_recipe.values.sugar | round(2) }}</td>
                        <td>{{ daily_recipe.amount }}</td>
                        <td>
                            <a href="{{ url_for('DailyPlansView:remove_daily_recipe', id=daily_recipe.id, date=dates['active']) }}">
                                <i class="remove fa fa-times"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tr>
                    <th></th>
                    <th>{{ texts.energy_simple }}</th>
                    <th>{{ texts.protein_simple }}</th>
                    <th>{{ texts.fat_simple }}</th>
                    <th>{{ texts.sugar_simple }}</th> 
                    <th>{{ texts.amount_simple }}</th>
                    <th data-toggle="tooltip" title="tuky: bílkoviny + cukry">{{ texts.ratio }}</th>
                </tr>
                <tr data-target="daily-plan.totals">
                    <th>Celkem:</th>
                    <td>{{ daily_plan.totals.calorie | round(2) }}</td>
                    <td>{{ daily_plan.totals.protein | round(2) }}</td>
                    <td>{{ daily_plan.totals.fat | round(2) }}</td>
                    <td>{{ daily_plan.totals.sugar | round(2) }}</td>
                    <td>{{ daily_plan.totals.amount | round(2) }}</td>
                    <td>{{ daily_plan.totals.ratio }} : 1</td>
                </tr>
            </table>

        </div>
        <div class="row" style="float:right; margin-top:5rem;">
            <form class="form" action="{{ url_for('DailyPlansView:add_recipe') }}" method="post">
                <div class="form-group form-inline">
                    {# Diets #}
                    <select class="form-control" data-target="daily-plan.diets" data-action="change->daily-plan#load_recipes">
                    {% for diet in diets: %}
                        <option  value="{{ diet.id }}">{{ diet.name }}</option>
                    {% endfor %}
                    </select>
                    {# Recipes #}
                    <select name="recipe_id" class="form-control" data-target="daily-plan.recipes"></select>
                </div>

                {# Amount #}
                <div class="form-group form-inline">
                    <label>Podíl z celé diety</label>
                    {% from "_percentage_button.html.j2" import percentage_button %}
                    {% for percentage in [10, 12.5, 25, 50, 100] %}
                        {{ percentage_button(percentage, controller="daily-plan", action="set_amount") }}
                    {% endfor %}
                    <input type="number" step="0.1" min="1" max="100" data-target="daily-plan.percentage" name="recipe_percentage" class="form-control" required>
                </div>
                {# Hidden #}
                <input type="hidden" name="date" value="{{ dates['active'] }}">
                {# Submit #}
                <input type="submit" data-target="daily-plan.submit" class="form-control btn btn-primary" value="Přidat recept">
            </form>
        </div>

    </div>
{% endblock %}
