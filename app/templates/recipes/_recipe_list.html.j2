<div class="col">
    <label for="recipes"><h3>{{ texts.recipe_list }}</h3></label>
    <ul name="recipes">
        {% for recipe in recipes %}
            <li><a href="{{ url_for('RecipesView:show', id=recipe.id) }}">{{ recipe.name }}</a></li>
        {% endfor %}
    </ul>

    {% if current_user.is_admin %}
    <div class="admin-field">
	    <label for="all_recipes"><h3>VÅ¡echny</h3></label>
