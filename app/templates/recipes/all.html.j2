{% extends "base.html.j2" %}
{% block title %}
    {{ texts.recipe_all }}
{% endblock %}

{% block style %}{% endblock %}

{% block script %}{% endblock %}

{% block content %}
    <div class="container">
        <table id="diets" class="table">

            {% for diet in diets: %}
                <tr>
                    <th class='diet'><a href="{{ url_for('DietsView:show', id=diet.id) }}">{{ diet.name }}</a></th>
                </tr>

                {% for recipe in diet.recipes: %}
                    <tr>
                        <td><a href="{{ url_for('RecipesView:show', id=recipe.id) }}">{{ recipe.name }}</a></td>
                    </tr>
                {% endfor %}
            {% endfor %}       

        </table>

        <div>
            <div>
                <a href="{{ url_for('RecipesView:new') }}" target="_blank" class="btn btn-secondary">{{ texts.recipe_new }}</a>
            </div>

            <div style="margin-top: 5px">
                <a href="{{ url_for('RecipesView:make_all_public') }}" class="btn btn-secondary">zveřejnit všechny recepty</a>
            </div>    
        </div>

        <div>
            {% for file in all_files %}
                {{ file.name }}
            {% endfor %}
        </div>
    </div>
{% endblock %}

