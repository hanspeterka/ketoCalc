{% extends "base.html.j2" %}
{% block title %}
    {% if not is_print %}
        {{ texts.recipe}}
    {% else %}
        {{ texts.recipe_print}} - {{ recipe.name }}
    {% endif %}
{% endblock %}
    
{% block style %}
    {% if is_print %}
        <style type="text/css" media="screen">
            @media print {
                body {-webkit-print-color-adjust: exact;}
            } 
        </style>
    {% endif %}
{% endblock %}

{% block script %}
    {% include 'javascript/stimulus.js.html' %}
    {% include 'javascript/show_recipe.js.html' %}
{% endblock %}

{% block navbar %}
    {% if not is_print %}
        {{ super() }}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="col-12" data-controller="show-recipe">
            {% if not is_print %}
                <span class="data__table">
            {% else %}
                <span class="data__table d-print-table">
            {% endif %}

                <h2>{{ recipe.name }}</h2>
                <h5>{{ recipe.diet.name }}</h5>

                 </span>

            {% if current_user.is_admin %}
                <div class="admin-field">
                    Autor: <a href="{{ url_for('UsersView:show_by_id', id=recipe.author.id) }}">{{ recipe.author.username }}</a>
                    Recipe views: {{ recipe.view_count }}
                </div>
            {% endif %}

            <table id="ingredients" data-target="show-recipe.ingredientTable" class="table">
                <tr>
                    <th>{{ texts.title }}</th>
                    <th>{{ texts.energy_simple }}</th>
                    <th>{{ texts.protein_simple }}</th>
                    <th>{{ texts.fat_simple }}</th>
                    <th>{{ texts.sugar_simple }}</th>
                    <th>{{ texts.amount_simple }}</th>
                    <th></th>
                </tr>

                {% for ingredient in recipe.ingredients: %}
                    <tr data-id="{{ ingredient.id }}"
                        data-name="{{ ingredient.name }}"
                        data-calorie="{{ ingredient.calorie }}"
                        data-protein="{{ ingredient.protein }}"
                        data-fat="{{ ingredient.fat }}"
                        data-sugar="{{ ingredient.sugar }}"
                        data-amount="{{ ingredient.amount }}">
                        <td><a href="{{ url_for('IngredientsView:show', id=ingredient.id) }}">{{ ingredient.name }}</a></td>
                        <td data-type="calorie"></td>
                        <td data-type="protein"></td>
                        <td data-type="fat"></td>
                        <td data-type="sugar"></td>
                        <td data-type="amount"></td>
                        <td></td>
                    </tr>
                {% endfor %}

                <tr class="totals" data-target="show-recipe.totals"></tr>
            </table>

            <div class="row" data-target="show-recipe.percentage">
                <div class="col-10">
                <form class="form-inline" data-action="submit->show-recipe#calculate_recipe">
                        <span class="btn bg-color-light-blue filter-gs-75" data-percentage=10 data-action="click->show-recipe#calculate_recipe">10%</span>
                        <span class="btn bg-color-light-blue filter-gs-75" data-percentage=12.5 data-action="click->show-recipe#calculate_recipe">12.5%</span>
                        <span class="btn bg-color-light-blue filter-gs-50" data-percentage=25 data-action="click->show-recipe#calculate_recipe">25%</span>
                        <span class="btn bg-color-light-blue filter-gs-25" data-percentage=50 data-action="click->show-recipe#calculate_recipe">50%</span>
                        <span class="btn bg-color-light-blue"  data-percentage=100 data-action="click->show-recipe#calculate_recipe">100%</span>
                        <input class="form-control" style="width: 15%" type="number" step="0.1" />
                        <input class="btn bg-color-dark-blue" type="submit" value="spočítat vlastní">
                </form>
                </div>
                <button type="button col-2" data-target="show-recipe.showPercentage" disabled class="btn ">Baba</button>
            </div>

            {% if not is_print %}
            <div class="">
                <form action="{{ url_for('RecipesView:delete', id=recipe.id) }}" method="post" class="form-inline"  accept-charset="utf-8" onsubmit="return confirm('{{ texts.recipe_delete_confirm }}');">
                    <a class="btn btn-warning" href="{{ url_for('RecipesView:edit', id=recipe.id) }}">{{ texts.edit }} {{ icons.edit }}</a>
                    <a class="btn btn-secondary" href="{{ url_for('RecipesView:print', id=recipe.id) }}" target="_blank" rel="noopener noreferrer">{{ texts.print }} {{ icons.print }}</a>
                    <button type="submit" class="btn btn-danger">{{ texts.recipe_delete}} {{ icons.delete }}</button>
                </form>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

