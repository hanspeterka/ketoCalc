{% extends "base.html.j2" %}
{% block title %}
    Jednoduchá kalkulačka
{% endblock %}

{% block script %}
    {% include 'javascript/stimulus.js.html' %}
    {% include 'javascript/simple_calculator_controller.js.html' %}
    {% include 'javascript/show_info_controller.js.html' %}

    <!-- Google Charts -->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <!-- Bootstrap slider -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/10.0.2/css/bootstrap-slider.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/10.0.2/bootstrap-slider.min.js"></script>
{% endblock %}

{% block content %}
    <div class="container" data-controller="simple-calculator show-info">
        <div class="hidden">
            <select data-target="simple-calculator.baseSelect">
                {{ options(ingredients) }}
            </select>
        </div>

        <div class="col">
            <div>
                <form class="form-inline" data-action="submit->simple-calculator#add_ingredient">
                    <select class="form-control" id="ingredient_select" data-target="simple-calculator.select">
                        {{ options(ingredients) }}
                    </select>

                    <input type="submit" class="btn btn-primary" value="Přidat surovinu" />
                    <i data-target="show-info.icon"></i>
                </form>
            </div>

            <div>
                <table class="table" data-target="simple-calculator.ingredientTable">
                    <tr>
                        <th>{{ texts.title }}</th>
                        <th>{{ texts.energy.for_100 }}</th>
                        <th>{{ texts.protein_100 }}</th>
                        <th>{{ texts.fat_100 }}</th>
                        <th>{{ texts.sugar_100}}</th>
                        <th></th>
                    </tr>
                </table>

                <table class="table">
                    <tr>
                        <th>{{ texts.energy_simple }}</th>
                        <th>{{ texts.protein_simple }}</th>
                        <th>{{ texts.fat_simple }}</th>
                        <th>{{ texts.sugar_simple }}</th> 
                        <th>{{ texts.amount_simple }}</th>
                        <th>{{ texts.ratio_full }}</th>
                    </tr>
                    <tr data-target="simple-calculator.totals">
                        <td data-field="calorie"></td>
                        <td data-field="protein"></td>
                        <td data-field="fat"></td>
                        <td data-field="sugar"></td>
                        <td data-field="amount"></td>
                        <td data-field="ratio"></td>"
                    </tr>
                </table>

                <div class="col-12">
                    {% if current_user.is_authenticated %}
                        <form class="form-inline" data-action="submit->simple-calculator#save_recipe">
                            <select class="form-control" data-target="simple-calculator.recipeDiet">
                                {{ options(diets) }}
                            </select>

                            <label>Název receptu</label>
                            <input type="text" class="form-control" data-target="simple-calculator.recipeName" required />
                            <input type="submit" class="btn btn-primary" value="{{ texts.recipe_save }}" />
                        </form>
                    {% endif %}

                    {% include 'ingredients/_data_source_aknowledgement.html.j2' %}
                </div>

            </div>

            <div data-target="show-info.info">
                {% include "simple_calculator/_simple_calculator_info.html.j2" %}
            </div>
        </div>
    </div>
{% endblock %}