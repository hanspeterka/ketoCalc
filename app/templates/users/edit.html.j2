{% extends "base.html.j2" %}
{% block title %}
    UÅ¾ivatel
{% endblock %}

{% block style %}{% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ url_for('static', filename='toggle_visibility.js') }}"></script>

    </script>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="col-12">
            <form action="{{ url_for('UsersView:post') }}" class="form-group" method="post" accept-charset="utf-8">
                {{ user_form.csrf_token }}
                {% from "_form_element.html.j2" import render_field %}
                <table class="table">
                    <thead>
                        <tr>
                            <th>{{ texts.user_username}}</th>
                            <th>{{ texts.user_firstname}}</th>
                            <th>{{ texts.user_lastname}}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                {{ user.username }}
                            </td>
                            <td>
                                {{ render_field(user_form.first_name, "form-control", label=False, value=user.first_name) }}
                            </td>
                            <td>
                                {{ render_field(user_form.last_name, "form-control", label=False, value=user.last_name) }}
                            </td>
                            <td>
                                {{ render_field(user_form.submit, "btn btn-warning", label=False, value=texts.edit_confirm) }}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>

            <form action="{{ url_for('UsersView:post_password_edit') }}" method="post">
                {{ password_form.csrf_token }}
                <table class="table">
                    <td>
                        <div class="form-group">
                            {{ render_field(password_form.password, class="form-control")}}
                            <span class="fa fa-fw fa-eye field-icon" onmouseover="turnOnVisibility()", onmouseout="turnOffVisibility()"></span>
                        </div>
                    </td>
                    <td>
                        {{ render_field(password_form.submit, "btn btn-warning float-right", label=False, value=texts.password_change) }}
                    </td>
                </table>
            </form>
        </div>

        <div>
            <a href="{{ url_for('UsersView:show') }}" class="btn btn-secondary">{{ texts.edit_cancel}} {{ icons.edit }}</a>
        </div>
    </div>
{% endblock %}

